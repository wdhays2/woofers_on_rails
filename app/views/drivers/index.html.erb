<div class='container-fluid'>
  <h1 align="center">Woofers</h1>
  <table>
    <tbody>
      <tr>
        <td>Minimum size </td>
        <td><input type="text" id="min_size" name="min_size"></td>
      </tr>
      <tr>
        <td>Maximum size </td>
        <td><input type="text" id="max_size" name="max_size"></td>
      </tr>
      <tr>
        <td>Minimum RMS power </td>
        <td><input type="text" id="min_rms" name="min_rms"></td>
      </tr>
      <tr>
        <td>Maximum RMS power </td>
        <td><input type="text" id="max_rms" name="max_rms"></td>
      </tr>
      <tr>
        <td>Minimum Xmax </td>
        <td><input type="text" id="min_xmax" name="min_xmax"></td>
      </tr>
      <tr>
        <td>Maximum Xmax </td>
        <td><input type="text" id="max_xmax" name="max_xmax"></td>
      </tr>
      <tr>
        <td>Minimum Qts </td>
        <td><input type="text" id="min_qts" name="min_qts"></td>
      </tr>
      <tr>
        <td>Maximum Qts </td>
        <td><input type="text" id="max_qts" name="max_qts"></td>
      </tr>
      <tr>
        <td>Minimum Sealed Volume </td>
        <td><input type="text" id="min_svol" name="min_svol"></td>
      </tr>
      <tr>
        <td>Maximum Sealed Volume </td>
        <td><input type="text" id="max_svol" name="max_svol"></td>
      </tr>
      <tr>
        <td>Minimum Sealed F3 </td>
        <td><input type="text" id="min_sf3" name="min_sf3"></td>
      </tr>
      <tr>
        <td>Maximum Sealed F3 </td>
        <td><input type="text" id="max_sf3" name="max_sf3"></td>
      </tr>
    </tbody>
  </table>
  <table class="table table-striped table-bordered display drivers" id="drivers" cellspacing="0" width="100%">
    <thead>
      <tr>
        <th>ID</th>
        <th>Manufacturer</th>
        <th>Size</th>
        <th>Cut Out</th>
        <th>Model Number</th>
        <th>Link</th>
        <th>Resistance</th>
        <th>RMS Power</th>
        <th>Sensitivity</th>
        <th>X_max</th>
        <th>Fs</th>
        <th>Vas</th>
        <th>Qts</th>
        <th>Low Frequency Limit</th>
        <th>High Frequency Limit</th>
        <th>Sealed Volume</th>
        <th>Sealed F3</th>
        <th>Vented Volume</th>
        <th>Vented F3</th>
      </tr>
    </thead>
    <tbody>
      <% @drivers.each do |driver| %>
        <tr>
          <td><%= driver.id %></td>
          <td><%= driver.manufacturer.name %></td>
          <td><%= driver.size %></td>
          <td><%= driver.cut_out %></td>
          <td><%= driver.model_no %></td>
          <td><%= link_to(driver.link, "https://www.parts-express.com/--#{driver.link}", target: '_blank' ) %></td>
          <td><%= driver.resistance %></td>
          <td><%= driver.rms_power %></td>
          <td><%= driver.sensitivity %></td>
          <td><%= driver.x_max %></td>
          <td><%= driver.fs %></td>
          <td><%= driver.vas %></td>
          <td><%= driver.qts %></td>
          <td><%= driver.low_frequency_limit %></td>
          <td><%= driver.high_frequency_limit %></td>
          <td><%= driver.sealed_volume %></td>
          <td><%= driver.sealed_f3 %></td>
          <td><%= driver.vented_volume %></td>
          <td><%= driver.vented_f3 %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br><br>
</div>
